<Window x:Class="Ejercicio2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio2"
        mc:Ignorable="d"
        Title="Dibujo Libre" Height="450" Width="800">
    <Grid Background="#FFE500FF">
        <Canvas x:Name="dibujoCanvas" Margin="43,160,54,38" Background="White"/>
        <Label x:Name="label" Content="Dibuje un objeto, paisaje o lo que usted quiera en la pizarra" HorizontalAlignment="Left" Margin="99,10,0,0" VerticalAlignment="Top" FontSize="20"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="31,110,0,0" VerticalAlignment="Top" Width="155" Height="33"/>
        <Label x:Name="label_Copiar" Content="Elija un color de pincel" HorizontalAlignment="Left" Margin="31,71,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Slider x:Name="slider" HorizontalAlignment="Left" Margin="264,118,0,0" VerticalAlignment="Top" Width="130" Height="16"/>
        <Label x:Name="label_Copiar1" Content="Elija un grosor del pincel" HorizontalAlignment="Left" Margin="236,71,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Button x:Name="button" 
        Content="Borrar dibujo" 
        Width="150" Height="35" 
        HorizontalAlignment="Left" 
        Margin="450,110,0,0"
        VerticalAlignment="Top"
        Click="button_Click"/>


    </Grid>
</Window>
