<Window x:Class="Ejercicio8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculadora de Propinas" Height="450" Width="800">
    <Grid Background="#FFF5F750">

        <!-- Monto de la cuenta -->
        <TextBlock Text="Monto de la cuenta:" 
                   FontSize="16" 
                   Margin="50,60,0,0" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top"/>
        <TextBox x:Name="txtMonto" 
                 HorizontalAlignment="Left" 
                 Margin="220,55,0,0" 
                 VerticalAlignment="Top" 
                 Width="120" 
                 FontSize="16"/>

        <!-- Selección de porcentaje de propina -->
        <TextBlock Text="Porcentaje de propina:" 
                   FontSize="16" 
                   Margin="50,120,0,0" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top"/>
        <ComboBox x:Name="comboPropina" 
                  HorizontalAlignment="Left" 
                  Margin="220,115,0,0" 
                  VerticalAlignment="Top" 
                  Width="120" 
                  Height="30" 
                  FontSize="16"/>

        <!-- Botón para calcular -->
        <Button x:Name="btnCalcular" 
                Content="Calcular" 
                HorizontalAlignment="Left" 
                Margin="50,180,0,0" 
                VerticalAlignment="Top" 
                Width="120" 
                Height="40" 
                FontSize="16"
                Click="btnCalcular_Click"/>

        <!-- Resultado -->
        <Label x:Name="lblResultado" 
               Content="Resultado:" 
               FontSize="18" 
               FontWeight="Bold"
               Margin="50,250,0,0" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Top"/>
    </Grid>
</Window>

