<Window x:Class="Ejercicio5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edición de Imágenes" Height="500" Width="800">
    <Grid Margin="10">
        <!-- Botón para cargar imagen -->
        <Button x:Name="btnCargar" Content="Cargar Imagen"
                HorizontalAlignment="Left" Margin="10,10,0,0"
                VerticalAlignment="Top" Height="40" Width="150"
                Click="btnCargar_Click"/>

        <!-- Imagen cargada -->
        <Image x:Name="imgPreview" HorizontalAlignment="Left"
               Height="250" Margin="10,70,0,0" VerticalAlignment="Top"
               Width="300" Stretch="Uniform"/>

        <!-- Slider para ajustar tamaño -->
        <TextBlock Text="Tamaño:" Margin="330,70,0,0"
                   VerticalAlignment="Top" FontSize="16"/>
        <Slider x:Name="sliderTamaño" Minimum="0.5" Maximum="2" Value="1"
                Width="200" Height="30" Margin="400,70,0,0"
                VerticalAlignment="Top" ValueChanged="sliderTamaño_ValueChanged"/>

        <!-- Slider para brillo -->
        <TextBlock Text="Brillo:" Margin="330,130,0,0"
                   VerticalAlignment="Top" FontSize="16"/>
        <Slider x:Name="sliderBrillo" Minimum="0.5" Maximum="2" Value="1"
                Width="200" Height="30" Margin="400,130,0,0"
                VerticalAlignment="Top" ValueChanged="sliderBrillo_ValueChanged"/>

        <!-- Botones de aplicar y guardar -->
        <Button x:Name="btnAplicar" Content="Aplicar Cambios"
                HorizontalAlignment="Left" Margin="330,200,0,0"
                VerticalAlignment="Top" Height="50" Width="180"
                Click="btnAplicar_Click"/>

        <Button x:Name="btnGuardar" Content="Guardar Imagen"
                HorizontalAlignment="Left" Margin="330,270,0,0"
                VerticalAlignment="Top" Height="50" Width="180"
                Click="btnGuardar_Click"/>
    </Grid>
</Window>

